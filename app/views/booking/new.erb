<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/style.css">
  <!-- <script src="https://code.jquery.com/jquery-3.2.0.js"></script> -->
</head>
<body>

  <form action='/bookings/new' method='post' role="form">
    <div class="form-group row">
      <label for="current_user" class="col-sm-1 col-form-label col-md-offset-4 "></label>
      <div class="col-sm-2">
        <h4><%=@place.name%></h4>
        <img class="card-img-top" src="https://static.pexels.com/photos/261187/pexels-photo-261187.jpeg" alt="Houese image" height="200" width="200">
      </div>
    </div>

    <div class="form-group row">
      <label for="current_user" class="col-sm-1 col-form-label col-md-offset-4 ">Email:</label>
      <div class="col-sm-2">
        <input class="form-control" type="text" value="<%=current_user.email%>" id="current_user_email" name="current_user_email" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="current_user" class="col-sm-1 col-form-label col-md-offset-4">Message for owner:</label>
        <div class="col-sm-2">
          <textarea class="form-control" type="text" placeholder="Enter short message" id="message" name="message" rows="3" cols="2" required></textarea>
        </div>
    </div>

    <div class="form-group row">
      <label for="current_user" class="col-sm-1 col-form-label col-md-offset-4">Book from:</label>
      <div class="col-sm-2">
        <input class="form-control" type="date"  id="book_from" name="book_from">
      </div>
    </div>

    <div class="form-group row">
      <label for="current_user" class="col-sm-1 col-form-label col-md-offset-4">Book till:</label>
      <div class="col-sm-2">
        <input class="form-control" type="date"  id="book_to" name="book_to">
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-offset-5">
        <input id='book' type="submit" value="Book" class="btn btn-primary">
      </div>
   </div>

  </form>

  <!-- <script src="/js/newplace.js" type="text/javascript"></script> -->
  </body>
  </html>
