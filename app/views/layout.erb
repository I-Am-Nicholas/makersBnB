<html>
  <head>
    <title></title>
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>

    <form method='get' action='/'>
      <input type='submit' name='home' value='Home'>
    </form>

    <% if current_user == nil %>
    <div class="layoutbtn">
      <form method='get' action='/users/new'>
        <input type='submit' class="nav-link" name='joinus' value='Join Us'>
      </form>

      <form method='get' action='/places' class="form-inline my-2 my-lg-0">
        <input type='submit' class="nav-link" name='lookaround' value='Look Around'>
      </form>

      <form method='get' action='/sessions/new' class="form-inline my-2 my-lg-0">
        <input type='submit' class="nav-link" name='checkaccount' value='Check Account'>
      </form>
  </div>
    <% end %>

    <% if current_user %>
    Welcome <%= current_user.name %>!
    <form method='post' action='/sessions'>
      <input type='hidden' name='_method' value='delete'>
      <input type='submit' name='Sign out' value='Sign out'>
    </form>
    <form method='get' action='/places'>
      <input type='submit' name='viewplaces' value='View places'>
    </form>
    <form method='get' action='/places/new'>
      <input type='submit' name='addplaces' value='Add places'>
    </form>
    <form method='get' action='/user/account'>
      <input type='submit' name='myaccount' value='My Account'>
    </form>
   <% end %>

    <% if flash[:notice] %>
      <div id='notice'><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:message] %>
      <div id='notice'><%= flash[:message] %></div>
    <% end %>

    <%= yield %>

  </body>
</html>
